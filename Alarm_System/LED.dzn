interface ILED {
	in void setGreen();
	in void setYellow();
	in void setRed();

	behaviour {
		on setGreen, setYellow, setRed: {}
	}
}

component LED {
	provides ILED iLED;
	
	behaviour {
		enum State { Green, Yellow, Red };
		State state = State.Green;
		on iLED.setGreen(): {
			state = State.Green;
		}
		on iLED.setYellow(): {
			state = State.Yellow;
		}
		on iLED.setRed(): {
			state = State.Red;
		}
	}
}