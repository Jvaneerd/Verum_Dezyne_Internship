interface ITimer {
	extern Integer $int$;
	enum State { Idle, Running };
	in void start(Integer seconds);
	in void cancel();
	out void timeout();

	behaviour {
		State state = State.Idle;

		[state.Idle] {
			on start: state = State.Running;
			on cancel: {}
		}

		[state.Running] {
			on start: illegal;
			on cancel: state = State.Idle;
			on inevitable: {
				state = State.Idle;
				timeout;
			}
		}
	}
}

component Timer { provides ITimer iTimer; }